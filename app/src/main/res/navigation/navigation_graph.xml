<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/transactionsFragment">

    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.transactions.TransactionsFragment"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" />

    <fragment
        android:id="@+id/walletFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.wallet.WalletFragment"
        android:label="fragment_wallet"
        tools:layout="@layout/fragment_wallet" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.more.MoreFragment"
        android:label="fragment_more"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_moreFragment_to_budgetFragment"
            app:destination="@id/budgetFragment" />
    </fragment>
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.analytics.AnalyticsFragment"
        android:label="fragment_analytics"
        tools:layout="@layout/fragment_analytics" />
    <fragment
        android:id="@+id/budgetFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.budget.BudgetFragment"
        android:label="fragment_budget"
        tools:layout="@layout/fragment_budget" >
        <action
            android:id="@+id/action_budgetFragment_to_updateBudgetDialogFragment"
            app:destination="@id/updateBudgetDialogFragment" />
    </fragment>
    <dialog
        android:id="@+id/updateBudgetDialogFragment"
        android:name="com.proptit.budgetbuddy.presentation.ui.budget.edit.EditBudgetDialog"
        android:label="fragment_update_budget_dialog"
        tools:layout="@layout/dialog_update_budget" />
</navigation>